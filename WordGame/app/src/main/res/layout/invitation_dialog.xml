<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/username_view"
            android:padding="10dp"
            android:hint="Type username"
            android:textColorHint="#F5D183"
            android:textCursorDrawable="@null"
            android:textColor="#F2B126"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@id/username_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/send_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="7dp"
                android:background="@drawable/button"
                android:textColor="#C0FFFFFF"
                android:text="INVITE"
                android:textStyle="bold"/>

            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/cancel_invitation"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/button"
                android:textColor="#C0FFFFFF"
                android:text="CANCEL"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
