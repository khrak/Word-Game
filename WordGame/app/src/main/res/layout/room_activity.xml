<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="@dimen/start_screen_top_margin">

    <ImageView
        android:id="@+id/title"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:foregroundGravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button">

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_icon1"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/profile_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mamuka"
                    android:textColor="#C0FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_icon2"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/profile_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mamuka"
                    android:textColor="#C0FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="9dp"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image3"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_icon3"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/profile_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mamuka"
                    android:textColor="#C0FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image4"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_icon4"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/profile_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mamuka"
                    android:textColor="#C0FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image5"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_icon5"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/profile_image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mamuka"
                    android:textColor="#C0FFFFFF"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
