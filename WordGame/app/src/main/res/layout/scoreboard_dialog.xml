<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/round_number_btn"
        android:layout_marginBottom="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/button"
        android:elevation="20dp"
        android:text="Round 2 results"
        android:textColor="#C0FFFFFF"
        android:textStyle="bold"
        android:onClick="aboutClicked"/>

    <TextView
        android:id="@+id/scoreboard_title"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scoreboard"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:layout_below="@id/scoreboard_title"
        android:layout_above="@id/round_number_btn"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:id="@+id/scoreboard_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
